@model List<WarThunderShellGuide.Models.TankViewModel>



@{
    ViewBag.Title = "About";
}

<link href="~/Content/tankIndex.css" rel="stylesheet" />
<script src="~/Scripts/jquery-2.1.3.js"></script>

<link href="~/Content/themes/default/style.min.css" rel="stylesheet" />
<script src="~/Scripts/jstree.min.js"></script>

<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
<link href="~/Content/jquery.dataTables.css" rel="stylesheet" />

<script src="~/Scripts/tankIndex.js"></script>



    <ul class='tabs'>
        <li><a href='#tab1'>Tree View</a></li>
        <li><a href='#tab2'>Picture View</a></li>
        <li><a href='#tab3'>HTML DataTable</a></li>
        <li><a href='#tab4'>JSON DataTable</a></li>
    </ul>
<div class="divTabs">
    <div id='tab1'>
        <ul style="list-style-type: none;">
            <li>
                @*///////////HTML TREE///////////////////*@
                <div class="TreeDiv">
                    HTML TREE
                    <div id="htmlTree">
                        <ul>
                            <li id="tankTree">
                                Tanks
                                <ul>
                                    <li>
                                        Germany
                                        <ul><li id="child_node_1" data-tank-id="1">Pz.Kpfw. III Ausf. M</li></ul>
                                    </li>
                                    <li>
                                        Russia
                                        <ul><li>T-34 1942</li></ul>
                                    </li>
                                    <li>
                                        Britain
                                        <ul>
                                            <li>Chieftain Mk2</li>
                                            <li>Chieftain Mk3</li>
                                            <li>Chieftain Mk5</li>
                                            <li>Chieftain Mk10</li>
                                            <li>Chieftain Mk11</li>
                                            <li>Chieftain Shir-I</li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </li>
            <li>
                @*/////////////JSON TREE////////////////*@
                <div class="TreeDiv">
                    JSON TREE
                    <div id="jsonTree"></div>
                </div>
            </li>
            <li>
                @*//////////AJAX JSON TREE//////////////*@
                <div class="TreeDiv">
                    AJAX JSON TREE
                    <div id="ajaxJsonTree"></div>
                </div>
            </li>
        </ul>
    </div>
     @*////////////// Picture Tanks List ////////////////*@
    <div id='tab2'>
        <ul class="globalTankBox">
            @foreach (var tank in Model)
            {
                <li data-tank-id="@tank.tankId" class="tankBox">
                    <img src="@tank.imageUrl" alt="@tank.name" width="50%" height="50%" />
                </li>
            }
        </ul>
    </div>
    @*/////////////// HTML DataTable //////////////////*@
    <div id="tab3">
        <table id="htmlTable" class="display" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Nation</th>
                    <th>Class</th>
                    <th>Battle Rating</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>Name</th>
                    <th>Nation</th>
                    <th>Class</th>
                    <th>Battle Rating</th>
                </tr>
            </tfoot>

            <tbody>
                @foreach (var tank in Model)
                {
                    <tr>
                        <td>@tank.name</td>
                        <td>@tank.nation</td>
                        <td>@tank.afvClass</td>
                        <td>@tank.battleRating</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
    @*////////////// Json Ajax DataTable ////////////// *@
    <div id="tab4">
        <table id="jsonTable" class="display" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Nation</th>
                    <th>Class</th>
                    <th>Battle Rating</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>Name</th>
                    <th>Nation</th>
                    <th>Class</th>
                    <th>Battle Rating</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>


<div class="stats"></div>
